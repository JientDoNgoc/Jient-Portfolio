<h3>Create a new Portfolio Items</h3>

<%= form_for(@porfolio_items) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
    <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle  %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>